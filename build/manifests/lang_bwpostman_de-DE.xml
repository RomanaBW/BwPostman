<?xml version="1.0" encoding="UTF-8"?>
<extension type="file" version="3.0" method="upgrade">
	<name>BwPostman German Language Pack</name>
	<element>lang_bwpostman_de-DE</element>
	<creationDate>April 2016</creationDate>
	<author>Boldt Webservice</author>
	<authorEmail>forum@boldt-webservice.de</authorEmail>
	<authorUrl>https://www.boldt-webservice.de</authorUrl>
	<copyright>www.boldt-webservice.de</copyright>
	<license>This component is released under the GNU/GPLv3 License or later</license>
	<version>2.0.0</version>

	<description>German (Germany) language file for BwPostman</description>

	<fileset>
		<files folder="site" target="language/de-DE">
			<filename>de-DE.com_bwpostman.ini</filename>
			<filename>de-DE.mod_bwpostman.ini</filename>
			<filename>de-DE.mod_bwpostman.sys.ini</filename>
			<filename>de-DE.mod_bwpostman_overview.ini</filename>
			<filename>de-DE.mod_bwpostman_overview.sys.ini</filename>
		</files>

		<files folder="admin" target="administrator/language/de-DE">
			<filename>de-DE.com_bwpostman.ini</filename>
			<filename>de-DE.com_bwpostman.sys.ini</filename>
			<filename>de-DE.plg_bwpostman_personalize.ini</filename>
			<filename>de-DE.plg_bwpostman_personalize.sys.ini</filename>
		</files>
	</fileset>

	<updateservers>
		<server type="extension" priority="1" name="BwPostman Language Updates de-DE">https://www.boldt-webservice.de/lang_bwpostman_update_de-DE.xml</server>
	</updateservers>

</extension>
