<?xml version="1.0" encoding="UTF-8"?>

<project name="BwPostman Module Subscription"  description="Build file for BwPostman module subscription" default="pack_subscription">

	<!-- ============================================  -->
	<!-- Target: prepare                               -->
	<!-- (Setting variables, delete target directory,  -->
	<!--  create target directory)                     -->
	<!-- ============================================  -->
	<target name="prepare_subscription">
		<echo msg="Set variables…" />
		<echo msg="Generals…" />
		<property name="extension" value="BwPostman" override="true" />
		<property name="module" value="mod_bwpostman" override="true" />

		<echo msg="Source dirs…" />
		<property name="source_base_dir" value="/vhosts/dev" override="true" />
		<property name="source_site_lang_dir" value="${source_base_dir}/language" override="true" />
		<property name="source_module_dir" value="${source_base_dir}/modules/mod_bwpostman" override="true" />

		<echo msg="target dirs…" />
		<property name="target_base_dir" value="/Support/Software/Joomla/${extension}/${version}" override="true" />
		<property name="target_base_module_dir" value="${target_base_dir}/${module}" override="true" />

		<echo msg="Deleting target directories… " />
		<delete dir="/Support/Software/Joomla/${extension}/${version}/${module}" includeemptydirs="true" verbose="true" failonerror="false" />

		<echo msg="Creating target directories… " />
		<mkdir dir="${target_base_module_dir}/files/site/language/de-DE" />
		<mkdir dir="${target_base_module_dir}/files/site/language/en-GB" />
	</target>

	<!-- ============================================  -->
	<!-- Target: build                                 -->
	<!-- (copy files of modules to target directory,   -->
	<!-- move manifest file, copy install fie to base  -->
	<!-- dir)                                          -->
	<!-- ============================================  -->
	<target name="build_subscription" depends="prepare_subscription">
		<echo msg="Copying files to build directory…" />

		<echo msg="Fetch licence…" />
		<copy file="/Support/Software/Joomla/${extension}/docs/gnu_gpl_v3.txt" tofile="${target_base_module_dir}/files/gnu_gpl_v3.txt"></copy>

		<echo msg="Copying module 1…" />
		<copy todir="${target_base_module_dir}/files/site">
			<fileset dir="${source_module_dir}">
				<include name="**" />
			</fileset>
		</copy>
		<copy todir="${target_base_module_dir}/files/site/language/de-DE">
			<fileset dir="${source_site_lang_dir}/de-DE">
				<include name="**/*${module}*.ini" />
			</fileset>
		</copy>
		<copy todir="${target_base_module_dir}/files/site/language/en-GB">
			<fileset dir="${source_site_lang_dir}/en-GB">
				<include name="**/*${module}*.ini" />
			</fileset>
		</copy>

		<echo msg="Chmod target dir…" />
		<chmod file="${target_base_dir}" mode="0777" />
	</target>

	<!-- ============================================  -->
	<!-- (DEFAULT)  Target: pack                       -->
	<!-- (Pack and upload  module)                     -->
	<!-- ============================================  -->
	<target name="pack_subscription" depends="build_subscription">
		<echo msg="Creating archive for module subscription" />

		<zip destfile="${target_base_dir}/${module}.${version}.zip">
			<fileset dir="${target_base_module_dir}/files">
				<include name="**/**" />
			</fileset>
		</zip>

		<echo msg="Files copied and compressed in build directory OK!" />

		<echo msg="Upload to webserver…" />
		<ftpdeploy
				host="ftp.strato.com"
				port="21"
				username="romana@boldt-webservice.de"
				password="@Miriam0"
				dir="/webservice3/download/bwpostman"
				passive="true"
				level="debug"
				rawdatafallback="true"
				mode="binary">
			<fileset dir="${target_base_dir}">
				<include name="*.zip"/>
				<include name="*.pdf"/>
			</fileset>
		</ftpdeploy>
		<echo msg="Upload to webserver OK!" />

		<move file="${target_base_dir}/${module}.${version}.zip" tofile="${target_base_module_dir}/${module}.${version}.zip" />
	</target>
</project>
