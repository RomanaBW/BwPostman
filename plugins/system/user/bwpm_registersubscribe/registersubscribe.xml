<?xml version="1.0" encoding="utf-8"?>
<extension group="system" method="upgrade" type="plugin" version="3.4">
	<name>PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE</name>
	<version>2.0.0</version>
	<creationDate>October 2016</creationDate>
	<author>Boldt Webservice</author>
	<authorEmail>forum@boldt-webservice.de</authorEmail>
	<authorUrl>http://www.boldt-webservice.de</authorUrl>
	<copyright>www.boldt-webservice.de</copyright>
	<license>GNU/GPLv3 or later</license>
	<description>PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_DESCRIPTION</description>

	<scriptfile>installscript.php</scriptfile>

	<files>
		<filename plugin="registersubscribe">registersubscribe.php</filename>
		<filename >installscript.php</filename>
		<filename >index.html</filename>
	</files>

	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.plg_bwpostman_registersubscribe.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_bwpostman_registersubscribe.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_bwpostman_registersubscribe.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_bwpostman_registersubscribe.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="register_message_option"
						type="textarea"
						id="register_message_option"
						description="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_MESSAGE_DESC"
						filter="string"
						label="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_MESSAGE_LABEL"
						cols="50"
						rows="10"
						default=""
				/>
				<field
						name="auto_update_email_option"
						type="checkbox"
						id="auto_update_email_option"
						description="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_AUTO_UPDATE_EMAIL_DESC"
						label="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_AUTO_UPDATE_EMAIL_LABEL"
						value="1"
						default="1"
				/>
				<field
						name="auto_delete_option"
						type="checkbox"
						id="register_subscribe_option"
						description="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_AUTO_DELETE_DESC"
						label="PLG_BWPOSTMAN_PLUGIN_REGISTERSUBSCRIBE_OPTION_AUTO_DELETE_LABEL"
						value="1"
						default="1"
				/>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension" priority="1" name="BwPostman Updates">http://www.boldt-webservice.de/plg_bwpostman_registersubscribe_update.xml</server>
	</updateservers>

</extension>
