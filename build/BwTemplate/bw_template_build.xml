<?xml version="1.0" encoding="UTF-8"?>

<project name="BwTemplates"  description="Build file for Templates created by Boldt Webservice" default="pack">
	<import file="./bwtemplates_variables.xml"/>

	<!-- ============================================  -->
	<!-- Target: prepare                               -->
	<!-- (Setting variables, delete target directory,  -->
	<!--  create target directory)                     -->
	<!-- ============================================  -->
	<target name="prepare">
		<echo msg="Deleting target directories… " />
		<delete dir="${target_base_dir}" includeemptydirs="true" verbose="true" failonerror="false" />

<!--
		<echo msg="Creating target directories… " />
		<mkdir dir="${target_base_dir}/files/language/de-DE" />
		<mkdir dir="${target_base_dir}/files/language/en-GB" />
-->
	</target>

	<!-- ============================================  -->
	<!-- Target: build                                 -->
	<!-- (copy files of template to target directory)  -->
	<!-- ============================================  -->
	<target name="build" depends="prepare">
		<echo msg="Copying files to build directory…" />

		<echo msg="Copying language files…" />
		<echo msg="Copying from ${source_site_lang_dir}/de-DE" />
		<echo msg="Copying to ${source_base_dir}/templates/${tpl_name}/files/language/de-DE" />
		<copy todir="${source_base_dir}/templates/${tpl_name}/language/de-DE">
			<fileset dir="${source_site_lang_dir}/de-DE">
				<include name="**/*${tpl_name}*.ini" />
			</fileset>
		</copy>
		<copy todir="${source_base_dir}/templates/${tpl_name}/language/en-GB">
			<fileset dir="${source_site_lang_dir}/en-GB">
				<include name="**/*${tpl_name}*.ini" />
			</fileset>
		</copy>

		<echo msg="Copying template…" />
		<copy todir="${target_base_dir}/files">
			<fileset dir="${source_site_dir}">
				<include name="**" />
			</fileset>
		</copy>

		<echo msg="Chmod target dir…" />
		<chmod file="${target_base_dir}" mode="0777" />
	</target>

	<!-- ============================================  -->
	<!-- (DEFAULT)  Target: pack                       -->
	<!-- (Pack and upload component, modules and       -->
	<!-- (overall package)                             -->
	<!-- ============================================  -->
	<target name="pack" depends="build">
		<echo msg="Creating archive…" />

		<zip destfile="${target_base_dir}/${tpl_name}.${version}.zip">
			<fileset dir="${target_base_dir}/files">
				<include name="**/**" />
			</fileset>
		</zip>

		<echo msg="Files copied and compressed in build directory OK!" />

		<move file="${target_base_dir}/${tpl_name}.${version}.zip" tofile="${target_base_dir}/${tpl_name}.${version}.zip" />
	</target>
</project>
