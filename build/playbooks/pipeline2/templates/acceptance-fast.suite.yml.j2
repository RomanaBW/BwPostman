---
# Codeception Test Suite Configuration
#
# Suite for acceptance tests.
# Perform tests in browser using the WebDriver or PhpBrowser.
# If you need both WebDriver and PHPBrowser tests - create a separate suite.

class_name: AcceptanceTester

paths:
  log: tests/_output/{{ project_name }}
  data: tests/_data

modules:
  enabled:
    - \Helper\Acceptance
    - WebDriver
    - Db
    - Asserts
    - Filesystem
  #      - MailCatcher
  #      - \Helper\MailCatcher

  # Default configuration is for simple joomla container tests (BwPostman component, modules, 'normal' plugins)
  config:
    Db:
      dsn: 'mysql:host={{ test_db_host }};dbname={{ test_db_dbname }}'
      user: '{{ test_db_user }}'
      password: '{{ test_db_password }}'

      populate: false
      cleanup: false
      reconnect: true

    WebDriver:
      url: http://{{ test_url }}

      browser: chrome
      port: 4445
      capabilities:
        chromeOptions:
          args: ["--window-size=1920,1080"]
          prefs:
            download.default_directory: "/tests/tests/_output"


      connection_timeout: 60
      restart: false

