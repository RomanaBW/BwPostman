actor: Tester
paths:
    tests: {{ codecept_path_tests }}
    log: {{ codecept_path_output }}
    data: ..{{ codecept_path_data }}
    support: {{ codecept_path_support }}
#    envs: tests/_envs
settings:
    bootstrap: _bootstrap.php
    colors: true
    memory_limit: 2048M
extensions:
    enabled:
        - Codeception\Extension\BwRunFailed
coverage:
    enabled: true
modules:
    config:
        Codeception\Extension\RemoteDebug:
            sessionName: PHPSTORM

        Db:
            dsn: 'mysql:host={{ db_host }};dbname={{ test_db_dbname }}'
            user: '{{ test_db_user }}'
            password: '{{ test_db_password }}'
            populate: false
            cleanup: false

