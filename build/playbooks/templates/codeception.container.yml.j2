actor: Tester
paths:
    tests: {{ codecept_path_tests }}
    log: {{ codecept_path_output }}
    data: {{ codecept_path_data }}
    support: {{ codecept_path_support }}
#    envs: tests/_envs
settings:
    bootstrap: _bootstrap.php
    colors: true
    memory_limit: 2048M
extensions:
    enabled:
        - Codeception\Extension\BwRunFailed
coverage:
    enabled: true
modules:
    config:
        Codeception\Extension\RemoteDebug:
            sessionName: PHPSTORM

        Db:
            dsn: 'mysql:host={{ item.value.db_ip }};dbname={{ BW_TEST_DB_NAME }}'
            user: '{{ BW_TEST_DB_USER }}'
            password: '{{ BW_TEST_DB_PW }}'
            populate: false
            cleanup: false

