<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>COM_BWPOSTMAN</name>
	<creationDate>%%creation_date%%</creationDate>
	<author>Boldt Webservice</author>
	<authorEmail>forum@boldt-webservice.de</authorEmail>
	<authorUrl>https://www.boldt-webservice.de</authorUrl>
	<copyright>www.boldt-webservice.de</copyright>
	<license>This component is released under the GNU/GPLv3 License or later</license>
	<version>%%version_number%%</version>
	<description></description>
	<namespace path="src">BoldtWebservice\Component\BwPostman</namespace>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">sql/uninstall.sql</file>
		</sql>
	</uninstall>

	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>forms</folder>
		<folder>helpers</folder>
		<folder>layouts</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>

	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_bwpostman.ini</language>
		<language tag="de-DE">de-DE/de-DE.com_bwpostman.ini</language>
	</languages>

<!-- See https://docs.joomla.org/J4.x:Web_Assets and https://joomla.stackexchange.com/questions/29044/how-to-use-joomla-asset-json-correctly -->
	<media destination="com_bwpostman" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>joomla.asset.json</filename>
	</media>

	<administration>

		<menu>COM_BWPOSTMAN_MENU_MAIN_ENTRY</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_bwpostman&amp;view=bwpostman" view="bwpostman" img="../media/com_bwpostman/images/logo-bwpostman.png"
			      alt="BwPostman/Dashboard">COM_BWPOSTMAN_MENU_MAIN_ENTRY_DASH</menu>
			<menu link="option=com_bwpostman&amp;view=newsletters" view="newsletters" img="../media/com_bwpostman/images/icon-16-newsletters.png"
				alt="BwPostman/Newsletters">COM_BWPOSTMAN_MENU_MAIN_ENTRY_NLS</menu>
			<menu link="option=com_bwpostman&amp;view=subscribers" view="subscribers" img="../media/com_bwpostman/images/icon-16-subscribers.png"
				alt="BwPostman/Subscribers">COM_BWPOSTMAN_MENU_MAIN_ENTRY_SUBS</menu>
			<menu link="option=com_bwpostman&amp;view=campaigns" view="campaigns" img="../media/com_bwpostman/images/icon-16-campaigns.png"
				alt="BwPostman/Campaigns">COM_BWPOSTMAN_MENU_MAIN_ENTRY_CAMS</menu>
			<menu link="option=com_bwpostman&amp;view=mailinglists" view="mailinglists" img="../media/com_bwpostman/images/icon-16-mailinglists.png"
				alt="BwPostman/Mailinglists">COM_BWPOSTMAN_MENU_MAIN_ENTRY_MLS</menu>
			<menu link="option=com_bwpostman&amp;view=templates" view="templates" img="../media/com_bwpostman/images/icon-16-templates.png"
				alt="BwPostman/Mailinglists">COM_BWPOSTMAN_MENU_MAIN_ENTRY_TPLS</menu>
			<menu link="option=com_bwpostman&amp;view=archive&amp;layout=newsletters" view="archive" img="../media/com_bwpostman/images/icon-16-archive.png"
				alt="BwPostman/Archive">COM_BWPOSTMAN_MENU_MAIN_ENTRY_ARC</menu>
			<menu link="option=com_bwpostman&amp;view=maintenance" view="maintenance" img="../media/com_bwpostman/images/icon-16-maintenance.png"
				alt="BwPostman/Maintenance">COM_BWPOSTMAN_MENU_MAIN_ENTRY_MAINTENANCE</menu>
		</submenu>

		<files folder="admin">
			<filename>access.xml</filename>
			<filename>CHANGELOG.txt</filename>
			<filename>config.xml</filename>
			<filename>import_demo.csv</filename>
			<filename>import_demo.xml</filename>
			<filename>index.html</filename>
			<filename>LICENSE.txt</filename>
			<filename>install.bwpostman.php</filename>
			<folder>classes</folder>
			<folder>forms</folder>
			<folder>Helper</folder>
			<folder>layouts</folder>
			<folder>libraries</folder>
			<folder>services</folder>
			<folder>sql</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>

		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_bwpostman.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_bwpostman.sys.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_bwpostman.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_bwpostman.sys.ini</language>
		</languages>

	</administration>

	<scriptfile>install.bwpostman.php</scriptfile>
</extension>
