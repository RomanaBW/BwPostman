# Codeception Test Suite Configuration
#
# Suite for acceptance tests.
# Perform tests in browser using the WebDriver or PhpBrowser.
# If you need both WebDriver and PHPBrowser tests - create a separate suite.

class_name: AcceptanceTester

paths:
  log: {{ codecept_path_output }}
  data: {{ codecept_path_data }}

modules:
  enabled:
    - \Helper\Acceptance
    - WebDriver
    - Db
    - Asserts
    - Filesystem

# Default configuration is for simple joomla container tests (BwPostman component, modules, 'normal' plugins)
  config:
    WebDriver:
      url: http://{{ web_container_ip }}

      browser: chrome
      port: 4445
      capabilities:
          chromeOptions:
              args: ["--window-size=1920,1080"]
              prefs:
                download.default_directory: "/repositories/artifacts/bwpostman/downloads"

      connection_timeout: 60
      restart: false
      log_js_errors: true

#        browser: firefox
#        port: 4444

    Db:
      dsn: 'mysql:host={{ db_host }};dbname={{ test_db_dbname }}'
      user: '{{ test_db_user }}'
      password: '{{ test_db_password }}'

      populate: false
      cleanup: false
      reconnect: true

