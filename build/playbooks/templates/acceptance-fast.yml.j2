---
class_name: AcceptanceTester

paths:
  log: output
  data: "{{ artifacts_base }}"

modules:
  enabled:
    - \Helper\Acceptance
    - WebDriver
    - Db
    - Asserts
    - Filesystem

  # Default configuration is for simple joomla container tests (BwPostman component, modules, 'normal' plugins)
  config:
    Db:
      dsn: 'mysql:host={{ database_ip }};dbname=joomlatest'
      user: 'tester'
      password: 'barbamama'

      populate: false
      cleanup: false
      reconnect: true

    WebDriver:
      url: http://{{ webserver_url }}

      browser: chrome
      port: 4445
      capabilities:
        "goog:chromeOptions":
          args: ["--window-size={{ screen_size_opts }}", "--no-sandbox"]
          prefs:
            download.default_directory: "/data/output"
            download.directory_upgrade: True
            download.prompt_for_download: False

      connection_timeout: 60
      restart: false
