<?xml version="1.0" encoding="UTF-8"?>

<project name="BwAttachments for Virtuemart"  description="Build file for Bw Plugin VmAttachments" default="pack_vm_attachments">
	<import file="./vm_variables.xml"/>

	<!-- ============================================  -->
	<!-- Target: prepare                               -->
	<!-- (Setting variables, delete target directory,  -->
	<!--  create target directory)                     -->
	<!-- ============================================  -->
	<target name="prepare_vm_attachments" depends="set_variables">
		<echo msg="Set variables…" />
		<property name="plugin" value="attachments_for_virtuemart" override="true" />

		<echo msg="Source dirs…" />
		<property name="source_plugin_dir" value="${source_base_dir}/plugins/attachments/${plugin}" override="true" />

		<echo msg="target dirs…" />
		<property name="target_base_plugin_dir" value="/Support/Software/Joomla/${extension}/${version}/plugins/${plugin}/" override="true" />

		<echo msg="Deleting target directories… " />
		<delete dir="${target_base_plugin_dir}" includeemptydirs="true" failonerror="false" />

		<echo msg="Creating target directories… " />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/administrator/templates/html/com_attachments/add" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/administrator/templates/html/com_attachments/edit" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/administrator/templates/html/com_attachments/entity" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/administrator/templates/html/com_attachments/attachments" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/administrator/templates/html/com_virtuemart/product" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/content/attachments/origin" />
		<mkdir dir="${target_base_plugin_dir}/files/filehelper/editors-xtd/add_attachment/origin" />
		<mkdir dir="${target_base_plugin_dir}/files/language/de-DE" />
		<mkdir dir="${target_base_plugin_dir}/files/language/en-GB" />
	</target>

	<!-- ============================================  -->
	<!-- Target: build                                 -->
	<!-- (copy files of component and modules to       -->
	<!-- target directory, empty capimgdir, move       -->
	<!-- manifest file, copy install file to base dir) -->
	<!-- ============================================  -->
	<target name="build_vm_attachments" depends="prepare_vm_attachments">
		<echo msg="Copying files to build directory…" />

		<echo msg="Copying plugin…" />
		<copy todir="${target_base_plugin_dir}/files">
			<fileset dir="${source_plugin_dir}">
				<include name="**" />
			</fileset>
		</copy>
		<copy todir="${target_base_plugin_dir}/files/filehelper">
			<fileset dir="${source_plugin_dir}/filehelper">
				<include name="**" />
			</fileset>
		</copy>
		<copy todir="${target_base_plugin_dir}/files/language/de-DE">
			<fileset dir="${source_admin_lang_dir}/de-DE">
				<include name="**/*${plugin}*.ini" />
			</fileset>
		</copy>
		<copy todir="${target_base_plugin_dir}/files/language/en-GB">
			<fileset dir="${source_admin_lang_dir}/en-GB">
				<include name="**/*${plugin}*.ini" />
			</fileset>
		</copy>

		<echo msg="Chmod target dir…" />
		<chmod file="${target_base_plugin_dir}" mode="0777" />
	</target>

	<!-- ============================================  -->
	<!-- (DEFAULT)  Target: pack                       -->
	<!-- (Pack and upload component, modules and       -->
	<!-- (overall package)                             -->
	<!-- ============================================  -->
	<target name="pack_vm_attachments" depends="build_vm_attachments">
		<echo msg="Fetch licence…" />
		<copy file="${licence_source}" tofile="${target_base_plugin_dir}/files/${licence_file}"></copy>

		<echo msg="Creating archive…" />
		<zip destfile="${target_base_plugin_dir}/plg_${plugin}.${version}.zip">
			<fileset dir="${target_base_plugin_dir}/files">
				<include name="**/**" />
			</fileset>
		</zip>

		<echo msg="Files copied and compressed in build directory OK!" />

		<echo msg="Upload Variable: ${upload}" />
		<if>
			<equals arg1="${upload}" arg2="1" trim="true" casesensitive="false" />
			<then>
				<echo msg="Upload to webserver…" />
				<scp
						username="${username}"
						password="${password}"
						host="${host}"
						todir="${upload_dir}">
					<fileset dir="${target_base_dir}">
						<include name="*.zip"/>
						<include name="*.pdf"/>
					</fileset>
				</scp>
				<echo msg="Upload to webserver OK!" />
			</then>
		</if>
	</target>
</project>
